<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="#fff3e2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="Hello"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:text="User Name" />


    <EditText
        android:id="@+id/editTextTextLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextFirstName"
        android:layout_alignStart="@+id/editTextTextFirstName"
        android:layout_below="@+id/editTextTextFirstName"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Last Name" />


    <EditText
        android:id="@+id/editTextTextEmailReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextLastName"
        android:layout_alignStart="@+id/editTextTextLastName"
        android:layout_below="@+id/editTextTextLastName"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/editTextTextPasswordReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextEmailReg"
        android:layout_alignStart="@+id/editTextTextEmailReg"
        android:layout_below="@+id/editTextTextEmailReg"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/editTextTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextPasswordReg"
        android:layout_alignStart="@+id/editTextTextPasswordReg"
        android:layout_below="@+id/editTextTextPasswordReg"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextTextOrgKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextId"
        android:layout_alignStart="@+id/editTextTextId"
        android:layout_below="@+id/editTextTextId"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Organization Key" />

    <Switch
        android:id="@+id/isManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTextOrgKey"
        android:layout_alignStart="@+id/editTextTextOrgKey"
        android:layout_below="@+id/editTextTextOrgKey"
        android:text="Manager" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editTextTextOrgKey"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SIGN UP"
            android:textColor="#fff"
            android:textSize="24sp" />


    </RelativeLayout>

</RelativeLayout>