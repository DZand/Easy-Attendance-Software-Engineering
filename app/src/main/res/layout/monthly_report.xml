<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyReport"
    android:background="#fff3e2">

    <Button
        android:id="@+id/logoutBtnHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:background="#D0E8F2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:text="Select Month:"
        android:layout_below="@id/logoutBtnHT"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinnerMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoutBtnHT"
        android:layout_alignBottom="@+id/txtMonth"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="-14dp"
        android:layout_toRightOf="@+id/txtMonth" />

    <TextView
        android:id="@+id/txtWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMonth"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="78dp"
        android:text="Select Employ:"
        android:textSize="25dp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinnerWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerMonth"
        android:layout_alignBottom="@+id/txtWorker"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="-26dp"
        android:layout_toRightOf="@+id/txtWorker" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerWorker"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="#D0E8F2"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />


</RelativeLayout>